<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:fontFamily="@font/original_surfer"
        android:text="@string/settings_title"
        android:textColor="@color/header_text_color"
        android:textSize="@dimen/header_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="94dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/sound_button"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/sound_button" />
        
        <ImageView
            android:id="@+id/sound_switcher"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/on"
            android:layout_marginTop="5dp" />

        <ImageButton
            android:id="@+id/vibro_button"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/vibro_button"
            android:layout_marginTop="40dp"/>

        <ImageView
            android:id="@+id/vibro_switcher"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/on"
            android:layout_marginTop="5dp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/home_button"
        android:layout_width="@dimen/options_button_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginBottom="32dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/home_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>